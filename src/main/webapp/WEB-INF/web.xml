<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Airbnb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - 
	List - 예약 내역 확인, 리뷰 작성 
- - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <servlet>
  	<servlet-name>List</servlet-name>
  	<servlet-class>controller.ListController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>List</servlet-name>
  	<url-pattern>*.li</url-pattern>
  </servlet-mapping> 
    
  
<!-- - - - - - - - - - - - - - - - - - - - - - - - - 
	Profile -  내 정보 확인, 리뷰 확인
- - - - - - - - - - - - - - - - - - - - - - - - - - -->  
  <servlet>
  	<servlet-name>Profile</servlet-name>
  	<servlet-class>controller.ProfileController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Profile</servlet-name>
  	<url-pattern>*.prf</url-pattern>
  </servlet-mapping>    
  
  
<!-- - - - - - - - - - - - - - - - - - - - - - - - - 
	Property - 숙소 등록, 수정, 삭제, 목록 조회, 상세 보기 
- - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <servlet>
  	<servlet-name>Property</servlet-name>
  	<servlet-class>controller.PropertyController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Property</servlet-name>
  	<url-pattern>*.pr</url-pattern>
  </servlet-mapping>
    
    
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - 
	Reservation -  예약 요청, 예약 확인, 예약 내역 조회, 결제
- - - - - - - - - - - - - - - - - - - - - - - - - - -->  
  <servlet>
  	<servlet-name>Reservation</servlet-name>
  	<servlet-class>controller.ReservationController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Reservation</servlet-name>
  	<url-pattern>*.re</url-pattern>
  </servlet-mapping>
  
  
<!-- - - - - - - - - - - - - - - - - - - - - - - - - 
	Statistics -  리뷰 작성, 리뷰 조회 등
- - - - - - - - - - - - - - - - - - - - - - - - - - -->  
  <servlet>
  	<servlet-name>Statistics</servlet-name>
  	<servlet-class>controller.StatisticsController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Statistics</servlet-name>
  	<url-pattern>*.st</url-pattern>
  </servlet-mapping>
  
  
<!-- - - - - - - - - - - - - - - - - - - - - - - - - 
	User -  로그인, 로그아웃, 회원가입, 내 정보 보기 등
- - - - - - - - - - - - - - - - - - - - - - - - - - -->  
  <servlet>
  	<servlet-name>User</servlet-name>
  	<servlet-class>controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>User</servlet-name>
  	<url-pattern>*.us</url-pattern>
  </servlet-mapping>


</web-app>